@model AR_Docent_MVC.Models.Product
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>New Product</h2>

<form asp-action="Create" enctype="multipart/form-data">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Title</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" asp-for="title"/>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" asp-for="name" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Content</label>
		<div class="col-sm-6">
			<textarea type="text" class="form-control" rows="5" name="content" asp-for="content"></textarea>
		</div>
	</div>
	

	<div class="form-group">
		@Html.AntiForgeryToken()
		<input type="file" class="form-control" name="image" asp-for="image" />
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Product Width</label>
		<div class="col-sm-2" align="right">
			<input type="number" class="form-control" asp-for="img_width"/>cm
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Product Height</label>
		<div class="col-sm-2" align="right">
			<input type="number" class="form-control" asp-for="img_height"/>cm
		</div>
	</div>

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index" role="button">Cancel</a>
		</div>
	</div>
</form>